<div class="yield">
	<div class="w">
	<div class="herd-hdr">
		<%= link_to 'Mozy back to the range', range_path, {:class => 'i-leftarrow'} %>
	</div><!-- /herd hdr -->
		<div class="herd">
			<%- title "New Herd" %>

			<%= form_for @grunt do |f| %>
				<% if @grunt.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@grunt.errors.count, "error") %> prohibited this major from being saved:</h2>
						<ul>
							<% @grunt.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
				<%= f.text_field :message, :placeholder => "Did you know the yak is the mightiest animal in the Midwest?" %>
				<input type="hidden" name="herd_id" value="<%= @herd.id %>" />
				<%= f.hidden_field :geo_lat %>
				<%= f.hidden_field :geo_long %>
				<%= f.submit "Yaaak" %>
			<% end %>

			<ul class="chat-list" id="chat_list" data-herdid="<%= @herd.id %>"><li>SEE MORE</li></ul>

		</div><!-- /herd -->
		<div class="herd-sb">
			<h1>Name of Heard</h1>
			<ul class="herd-stats">
				<li><%= @herd.yaks.length %><span> Yaks in this herd</span></li>
				<li><strong id="grunt_count"><%= @herd.grunts.length %></strong><span> total grunts</span></li>
				<li>12<span> mile radius</span></li>
			</ul><!-- /states -->
			<div class="range-actions">
				<%= link_to 'Leave the herd', range_path, {:class => 'leave-herd i-leftarrow'} %>
			</div><!-- /range actions -->
		</div><!-- /sb -->
	</div><!-- /w -->
</div><!-- /yield -->
<div class="overlay">
	<div class="overlay-content">
		<div class="chat-view">
			<div class="short_user_name"></div><h2 class="user_name"></h2>
			<div>
				<h3>Total Grunts:</h3><span class="grunt_count"></span>
			</div>
			<div>
				<h3>Last Grunt:</h3><span class="message"><span class="message-content"><span class="last_grunt"></span></span></span>
			</div>
		</div>
	</div>
</div>
<div class="overlay-bg"></div>
